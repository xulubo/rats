{
	"type": "object",
	"$schema": "http://json-schema.org/draft-04/schema#",
	"required" : ["meta", "titles"],
	"properties": 
	{
		"meta": 
		{
			"$ref": "#/definitions/meta"
		},

		"titles": 
		{
			"type": "array",
			"items": 
			{
				"type": "object",
				"required" : ["id", "type", "year", "href", "locales", "people", "extendedAttributes", "catalogVisibilityEndDate", "navTags"],
				"properties": 
				{
					"id": 
					{
						"type": "string"
					},
					"type": 
					{
						"type": "string"
					},

					"year": 
					{
						"type": "string"
					},
					"href": 
					{
						"type": "string"
					},

					"locales": 
					{
						"$ref": "#/definitions/locales"
					},

					"people": 
					{
						"type": "array"
					},
					
					"navTags": 
					{
						"$ref": "#/definitions/navTags"
					},

					"catalogVisibilityEndDate": 
					{
						"type": "number"
					},

					"extendedAttributes": 
					{
						"$ref": "#/definitions/extendedAttributes"
					}
				}
			}
		}
	},

	"definitions": 
	{
		"navTags": 
		{
			"title": "navTags",
			"description": "navTags of a title",
			"type": "array",
			"properties": 
			{
				"items": 
				{
					"type": "string"
				}
			},

			"additionalItems": false
		},

		"meta": 
		{
			"type": "object",
			"required" : ["pageNumber", "pageSize", "totalElements"],
			"properties": 
			{
				"pageNumber": 
				{
					"type": "number"
				},

				"pageSize": 
				{
					"type": "number"
				},

				"totalElements": 
				{
					"type": "number"
				}
			}
		},

		"extendedAttributes": 
		{
			"type": "object",
			"properties": 
			{
				"bannerImageURL": 
				{
					"type": "string"
				},

				"categoryType": 
				{
					"type": "string"
				},

				"contentType": 
				{
					"type": "string"
				},

				"deviceName": 
				{
					"type": "string"
				},

				"navTag": 
				{
					"type": "string"
				},

				"sourceCategoryPath": 
				{
					"type": "string"
				},

				"visibilityEndDate": 
				{
					"type": "string"
				},

				"year": 
				{
					"type": "string"
				}
			}
		},

		"languagePack": 
		{
			"type": "object",
			"properties": 
			{
				"description": 
				{
					"type": "string"
				},

				"name": 
				{
					"type": "string"
				}
			}
		},

		"images": 
		{
			"type": "array",
			"items": 
			{
				"type": "object",
				"properties": 
				{
					"href": 
					{
						"type": "string"
					},

					"role": 
					{
						"type": "string"
					}
				}
			}
		},

		"locales": 
		{
			"type": "array",
			"items": 
			{
				"type": "object",
				"properties": 
				{
					"images": 
					{
						"$ref": "#/definitions/images"
					},

					"languagePack": 
					{
						"$ref": "#/definitions/languagePack"
					},

					"locale": 
					{
						"type": "string"
					}
				}
			}
		}
	}
}